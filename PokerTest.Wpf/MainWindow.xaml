<Window x:Class="PokerTest.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerTest.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="750">

    <Window.Resources>

        <Style TargetType="MenuItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="Snow"/>
            <Setter Property="FontFamily" Value="Cascadia Mono SemiBold"/>
            <Setter Property="Background" Value="#B24A1E1E"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Snow"/>
            <Setter Property="FontFamily" Value="Cascadia Mono SemiBold"/>
            <Setter Property="Background" Value="#B3000000"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF652424"/>
            <Setter Property="BorderBrush" Value="#FF4A3D3D"/>
            <Setter Property="FontFamily" Value="Cascadia Mono"/>
            <Setter Property="Background" Value="#B2FFFFFF"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
        </Style>

    </Window.Resources>

    <Grid x:Name="MainGrid" Background="#FF000206">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu Background="#FF0E0306" Padding="5">
            <MenuItem Header="Микс" Click="Mix" Margin="10,0"/>
            <MenuItem Header="Найти расклад" Click="Search" Margin="10,0"/>
        </Menu>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition MaxWidth="170"/>
            </Grid.ColumnDefinitions>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Margin="5" CornerRadius="5" Grid.Row="0" Background="#FF0A0C12">

                    <Grid Margin="5">

                        <StackPanel x:Name="Table" Orientation="Horizontal" HorizontalAlignment="Center" />
                        <Label Content="Стол"/>

                    </Grid>

                </Border>

                <Border Margin="5" CornerRadius="5" Grid.Row="1" Background="#FF0A0C12">

                    <Grid Margin="5">

                        <StackPanel x:Name="Player" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" />
                        <Label Content="Игрок" />

                    </Grid>

                </Border>

            </Grid>

            <Grid Grid.Column="1">

                <Border Margin="5" CornerRadius="5" Grid.Row="1" Background="#FF0C0B0F">

                    <Grid Margin="5">

                        <StackPanel>

                            <Label x:Name="Combo" Content="Комбинация" />

                            <RadioButton x:Name="HighCard" Content="Старшая карта" IsChecked="True"/>
                            <RadioButton x:Name="OnePair" Content="Пара" />
                            <RadioButton x:Name="TwoPair" Content="Две пары" />
                            <RadioButton x:Name="ThreeOfAKind" Content="Сет" />
                            <RadioButton x:Name="Straight" Content="Стрит" />
                            <RadioButton x:Name="Flush" Content="Флеш" />
                            <RadioButton x:Name="FullHouse" Content="Фулл хаус" />
                            <RadioButton x:Name="FourOfAKind" Content="Каре" />
                            <RadioButton x:Name="StraightFlush" Content="Стрит-флеш" />
                            <RadioButton x:Name="RoyalFlush" Content="Флеш рояль" />

                        </StackPanel>

                    </Grid>

                </Border>

            </Grid>

        </Grid>

    </Grid>

</Window>
