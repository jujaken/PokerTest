<UserControl x:Class="PokerTest.Wpf.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokerTest.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="320">

    <UserControl.Resources>
        <BitmapImage x:Key="CardTiles" UriSource="Koloda.png" />
        <CroppedBitmap x:Key="CardTile" Source="{StaticResource CardTiles}" SourceRect="0 0 320 450"/>
    </UserControl.Resources>

    <Grid>
        <Image x:Name="CardImage" Source="{DynamicResource CardTile}" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>

</UserControl>
